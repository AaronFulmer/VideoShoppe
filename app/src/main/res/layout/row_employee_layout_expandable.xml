<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/list_editable_employeeID"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="ID: TS001"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/list_editable_employeeCell"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_height="20dp"
        android:layout_weight="20"
        android:gravity="center_vertical"
        android:text="Cell: 843-687-7750"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/list_editable_employeeEmail"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="tmsulivanedu@outlook.com"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />


</LinearLayout>
