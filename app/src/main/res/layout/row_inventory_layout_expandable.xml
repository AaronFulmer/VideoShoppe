<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/colorAccent"
    android:weightSum="100">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAccent"
        android:layout_weight="10">

        <TextView
            android:id="@+id/inventoryListID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="TEST ID"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/inventoryListReleaseDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="TEST Release"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="20dp" />
        <TextView
            android:id="@+id/inventoryListGenre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="TEST Genre"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="20dp" />
        <TextView
            android:id="@+id/inventoryListCondition"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="TEST condition"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="20dp" />
        <TextView
            android:id="@+id/inventoryListDirector"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="TEST director"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="20dp"  />
        <TextView
            android:id="@+id/inventoryListActors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="TEST actors"
            android:paddingLeft="20dp"  />


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:background="@color/colorAccent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageButton
            android:id="@+id/edit_inventory_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:tint="@color/colorPrimary"
            android:layout_weight="50"
            android:src="@drawable/baseline_edit_24"
            android:background="#00ffffff"/>


        <ImageButton
            android:id="@+id/delete_inventory_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:layout_weight="50"
            android:tint="#d11a2a"
            android:src="@drawable/baseline_delete_forever_24"
            android:background="#00ffffff"/>


    </LinearLayout>


</LinearLayout>
